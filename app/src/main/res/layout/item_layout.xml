<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="@dimen/dp_6"
        android:background="@color/color_card_view"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_card_view">

            <ImageView
                android:id="@+id/imArticleImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:transitionName="img"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/ivArticleImage1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_alignBottom="@+id/imArticleImage"
                android:src="@drawable/bg_image" />

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_alignStart="@+id/tvTitle"
                android:layout_alignTop="@+id/layoutDate"
                android:layout_alignEnd="@+id/layoutDate"
                android:layout_marginEnd="160dp"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="end"
                android:fontFamily="@font/worksansmedium"
                android:gravity="bottom"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/author"
                android:textColor="@android:color/white" />

            <FrameLayout
                android:id="@+id/layoutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imArticleImage"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-47dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/round_white"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/ic_date" />

                <TextView
                    android:id="@+id/tvPublishedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:fontFamily="@font/worksanssegular"
                    android:text="@string/base_data" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imArticleImage"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/title"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/tvTitle"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/description" />

        </RelativeLayout>
        <!-- Used for the ripple effect on touch -->
        <LinearLayout
            android:id="@+id/movieHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:orientation="horizontal" />
    </androidx.cardview.widget.CardView>
</FrameLayout>
